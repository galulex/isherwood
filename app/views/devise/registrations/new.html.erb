<% title "Sign Up" %>

<div class="container signup-padding">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <h1 class="text-center massive">Join Us</h1>
      <h5 class="text-center">Discover, discuss and review the <br>best products in the world.</h5>
        <div class="account-wall">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            
            <%= f.label :first_name, :class => 'h5 materialform' %><br />
            <%= f.text_field :first_name, autofocus: true, :class => 'form-control materialform'%>
            
            <%= f.label :username, :class => 'h5 materialform' %><br />
            <%= f.text_field :username, autofocus: true, :class => 'form-control materialform'%>
            
            <%= f.label :email, :class => 'h5 materialform' %><br />
            <%= f.email_field :email, autofocus: true, :class => 'form-control materialform'%>
            
            <%= f.label :password, :class => 'h5 materialform'%>
            <% if @minimum_password_length %>
            (<%= @minimum_password_length %> characters minimum)
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", :class => 'form-control materialform' %>
            
            <%= f.label :password_confirmation, :class => 'h5 materialform' %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control materialform'%>
            
            
            <div class="actions">
              <div class="materialformbutton">
              <%= f.submit "Sign up", :class => 'btn btn-main' %>
              </div>
                </div>
            
            <% end %>
    </div>
    
            <p class="have-account-padding">Have an acccount?<%= render "devise/shared/links" %></p>
  </div>
</div>
</div>
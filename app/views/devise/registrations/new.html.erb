<% title "Sign Up" %>

<div class="container account-card-begin">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <h1 class="text-center">Join Us</h1>
      <h5 class="text-center">Discover, discuss and review the <br>best products in the world.</h5>
        <div class="account-card">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <br>
          <%= f.text_field :first_name, autofocus: true, class: 'form-control field-space', placeholder: 'First name' %>
          <%= errors_for @user, :first_name %>
          <br>
          <%= f.text_field :username, autofocus: true, class: 'form-control field-space', placeholder: 'Username'%>
          <%= errors_for @user, :username %>
          <br> 
          <%= f.email_field :email, autofocus: true, class: 'form-control field-space', placeholder: 'Email'%>
          <%= errors_for @user, :email %>
          <br>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control field-space', placeholder: 'Password' %>
          <%= errors_for @user, :password %>
          <br>
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control field-space', placeholder: 'Password Confirmation' %>
          <%= errors_for @user, :password_confirmation %>
          <br>
          <div class="actions">
          <div class="action-btn">
          <%= f.submit "Sign up", :class => 'btn btn-main' %>
          </div>
          </div>
          <% end %>
        </div>
      <br>
      <p>Have an acccount?<%= render "devise/shared/links" %></p>
    </div>
  </div>
</div>
<div class="container">
  <div class="row" style="margin-top: 50px;">
    <div class="col-lg-4 col-lg-offset-1">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Add Photos</button>
    </div>
  </div>
  <div class="row" style="margin-top: 25px;">
    <div class="col-lg-10 col-lg-offset-1">
        <div class="row">
          <div class="col-lg-10">
            <%= form_tag '/delete_photo', method: :delete do %>
              <%= submit_tag 'Delete', id: 'delete', class: 'btn btn-danger', disabled: @photos.empty? %>
              <br><br>
              <div class="row">
                <div id="photos" class="col-lg-12">
                    <% @photos.each do |photo| %>
                      <div class="col-lg-4">
                        <div class="thumbnail">
                          <%= image_tag photo.file_name.url %>
                          <div class="caption">
                            <p>
                              <%= check_box_tag 'photos[]', photo.id %>
                            </p>
                          </div>
                        </div>
                      </div>
                    <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Add Photos</h4>
      </div>
      <div class="modal-body">
        <%= form_tag '/photos', method: :post, class: 'dropzone form', id: 'photo-dropzone' do %>
          <div class="fallback">
            <%= file_field_tag 'photo', multiple: true %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<h1><%= @review.title %></h1>
<hr>
    <% if current_user %>
      <%= rating_for @review, "product", disable_after_rate: false, path: 'star_icons', cancel_place: 'right' %>
    <% end %>
    <br>
<p><%= @review.description %></p>
<p><%= @review.brand.label %></p>
<p><strong>Written by <%= @review.user.first_name %> <%= @review.user.last_name %></strong></p>
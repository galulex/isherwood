<div class="container review-show-padding">
  <div class="col-xs-12 col-md-8 col-md-offset-2">
    <h1><%= @review.title %></h1>
    <% if @review.user == current_user %>
      <a href="#edit" data-toggle="collapse"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
      <div id="edit" class="collapse">
        <div class= "delete-review-button">    
          <%= button_to "Delete Review", @review, :method => :delete, class: "btn btn-sm btn-lakeside" %>    
        </div>
        <div class= "edit-review-button"> 
          <%= button_to "Edit Review", edit_review_path, :method => :get, class: "btn btn-sm btn-lakeside" %>
        </div>
      </div>
    <% end %>
    <br>
    <h6><strong><%= link_to ("WRITTEN BY " + @review.user.username.upcase), @review.user %></strong></h6>
    <p class="timeago"><%="#{time_ago_in_words(@review.created_at)} ago"%></p>
    <hr>
    <br>
    <p class="readscape"><%= @review.description %></p>
    <br>
    <br>
  </div>
</div>